/* General Window Styles */
QWidget {
    background-color: #f9f5f9; /* Fondo pastel */
    font-family: "Microsoft YaHei UI";
    color: #333333;
    font-size: 14px;
}

/* Botones */
QPushButton {
    background-color: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 5px 10px;
    color: #333333;
}

QPushButton:hover {
    background-color: #f0f0f0;
    border: 1px solid #d4d4d4;
}

QPushButton:pressed {
    background-color: #e6e6e6;
    border: 1px solid #c4c4c4;
}

/* Bot√≥n en estado desactivado */
QPushButton:disabled {
    background-color: #f5f5f5;
    color: #aaaaaa;
    border: 1px solid #dddddd;
}

/* Etiquetas */
QLabel {
    font-size: 14px;
    color: #333333;
}

/* Barra lateral */
QListWidget {
    background-color: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    font-size: 14px;
    color: #555555;
}

QListWidget::item:selected {
    background-color: #dce6f1;
    border-left: 3px solid #4a90e2;
    color: #333333;
}

/* Cuadros de texto */
QLineEdit, QTextEdit {
    background-color: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 4px;
    font-size: 14px;
    color: #333333;
}

QLineEdit:focus, QTextEdit:focus {
    border: 1px solid #4a90e2;
    outline: none;
}

/* Combobox */
QComboBox {
    background-color: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 4px;
    font-size: 14px;
    color: #333333;
}

QComboBox QAbstractItemView {
    border: 1px solid #e5e5e5;
    selection-background-color: #dce6f1;
    selection-color: #333333;
}

/* Tablas */
QTableWidget {
    background-color: #ffffff;
    border: 1px solid #e5e5e5;
    gridline-color: #dddddd;
    font-size: 14px;
    color: #333333;
}

QHeaderView::section {
    background-color: #f0f0f0;
    border: 1px solid #e5e5e5;
    padding: 4px;
    font-size: 14px;
    color: #333333;
}

/* Scrollbars */
QScrollBar:vertical, QScrollBar:horizontal {
    background-color: #f9f5f9;
    border: none;
    width: 10px;
    margin: 3px;
}

QScrollBar::handle {
    background-color: #cccccc;
    border-radius: 5px;
}

QScrollBar::handle:hover {
    background-color: #b3b3b3;
}

QScrollBar::sub-line, QScrollBar::add-line {
    background: none;
}
